@model MyBlog.Entities.Posts
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayoutMaster.cshtml";
}
@section Scripts
{
    <script src="@Url.Content("~/Scripts/tinymce/tinymce.js")"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: "textarea",
            plugins: [
                "advlist autolink lists link charmap print preview anchor",
                "searchreplace visualblocks code fullscreen",
                "insertdatetime media contextmenu paste"
            ],
            toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent"
        });
    </script>

}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Post</h1>
        </div>
        <!-- /.col-lg-12 -->
        @using (Html.BeginForm("Create", "Admin", FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Get Ready for Posts !!!
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.PostHeading)
                                            @Html.TextBoxFor(model => model.PostHeading, new { @class = "form-control", placeholder = "Post Heading" })
                                            @Html.ValidationMessageFor(model => model.PostHeading, null, new { @class = "control-label inputWarning" })
                                            <br />
                                            @Html.LabelFor(model => model.SecondaryText)
                                            @Html.TextBoxFor(model => model.SecondaryText, new { @class = "form-control", placeholder = "Secondary Text" })
                                            @Html.ValidationMessageFor(model => model.SecondaryText)
                                            <br />
                                            @Html.LabelFor(model => model.Title)
                                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Post Tittle" })
                                            @Html.ValidationMessageFor(model => model.Title)
                                            <br />
                                            Image 
                                            <input type="file" name="file" id="file" style="width: 100%" class="form-control" />
                                            <br />
                                                                                        Image 
                                            <input type="file" name="file" id="file2" style="width: 100%" class="form-control" />
                                            <br />

                                            @Html.LabelFor(model => model.PostDescription)
                                            @Html.TextAreaFor(model => model.PostDescription, 5, 50, new { @class = "form-control", placeholder = "Post Description" })
                                            @Html.ValidationMessageFor(model => model.PostDescription)

                                        </div>
                                        <button type="submit" value="create" class="btn btn-success">Submit Button</button>
                                    </form>
                                </div>

                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        }
    </div>
</div>
